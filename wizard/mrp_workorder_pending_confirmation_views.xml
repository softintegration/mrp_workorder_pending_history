<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mrp_workorder_pending_confirmation_form" model="ir.ui.view">
            <field name="name">mrp.workorder.pending.confirmation.form</field>
            <field name="model">mrp.workorder.pending.confirmation</field>
            <field name="arch" type="xml">
                <form string="Pending motif">
                <p>
                    <strong>Pending date</strong>
                </p>
                <group>
                    <field name="pending_date" nolabel="1" required="1"/>
                </group>
                <p>
                    <strong>What is the reason for this Pending?</strong>
                </p>
                <group>
                    <field name="pending_motif_id" nolabel="1" required="1"/>
                </group>
                <footer>
                    <button name="apply" string="Confirm" type="object" class="oe_highlight" data-hotkey="c"/>
                    <button string="_Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
            </field>
        </record>

    </data>

</odoo>
